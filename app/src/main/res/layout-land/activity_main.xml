<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:weightSum="2"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:layout_width="0dp"
    android:layout_height="match_parent">
        <fragment
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/scientistFragment"
            class="com.josue.flickr.SearchFragment"
            tools:layout="@layout/fragment_search"></fragment>
        <fragment
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/simpleFragment"
            class="com.josue.flickr.DetailFragment"
            tools:layout="@layout/fragment_detail"></fragment>
</LinearLayout>